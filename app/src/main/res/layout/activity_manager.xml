<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F0F3F6"
        >


        <LinearLayout style="@style/wrap_layout" >
            <!-- 上圆角top_layout-->
            <LinearLayout style="@style/top_layout">
                <TextView style="@style/usertext"
                    android:id="@+id/zhanghaoguanli"
                    android:drawableLeft="@drawable/zhanghaoguanli"
                    android:clickable="true"
                    android:text="账号管理" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout">
                <TextView style="@style/usertext"
                    android:id="@+id/scgl"
                    android:drawableLeft="@drawable/guanli"
                    android:clickable="true"
                    android:text="商品管理" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout">
                <TextView style="@style/usertext"
                    android:id="@+id/xzsp"
                    android:drawableLeft="@drawable/xinzengshangpin"
                    android:clickable="true"
                    android:text="新增商品" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout">
                <TextView style="@style/usertext"
                    android:id="@+id/dhjl"
                    android:drawableLeft="@drawable/quanbujilu"
                    android:clickable="true"
                    android:text="用户兑换记录" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <!-- 下圆角bottom_layout-->
            <LinearLayout style="@style/bottom_layout">
                <TextView style="@style/usertext"
                    android:id="@+id/ckfk"
                    android:drawableLeft="@drawable/chakan"
                    android:clickable="true"
                    android:text="查看用户反馈" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 全圆角single_layout-->
        <LinearLayout style="@style/wrap_layout">
            <LinearLayout style="@style/top_layout">
                <TextView
                    style="@style/usertext"
                    android:id="@+id/deletecache"
                    android:drawableLeft="@drawable/deletecache"
                    android:clickable="true"
                    android:text="清空缓存" />
                <TextView
                    android:id="@+id/cache"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <!-- 下圆角bottom_layout-->
            <LinearLayout style="@style/bottom_layout">
                <TextView style="@style/usertext"
                    android:id="@+id/gengxin"
                    android:drawableLeft="@drawable/gengxin"
                    android:clickable="true"
                    android:text="检查更新" />
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
