<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/IV_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/registerTextb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="商品详情"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/prizename"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:textSize="25dp"
                android:text="商品名称"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/prizecoins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jinbi"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="金币数"
                android:textColor="#ff5959"/>
            <View style="@style/bg_line"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/xiangxishuoming"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="详情说明："
                android:textColor="#a2a2a2"/>
            <View style="@style/bg_line"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/help_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="签到第1天-第5天可分别获得10、20、30、40、50金币/天。5天后连续签到可获得50金币/天。若中断，则重新从10金币/天开始计算。"
                android:textSize="15dp"
                android:textColor="#000000" />
            <View style="@style/bg_line"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zhongyaoshengming"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="重要声明："
                android:textColor="#a2a2a2"/>
            <View style="@style/bg_line"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/help_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="签到第1天-第5天可分别获得10、20、30、40、50金币/天。5天后连续签到可获得50金币/天。若中断，则重新从10金币/天开始计算。"
                android:textSize="15dp"
                android:textColor="#000000" />
        </LinearLayout>

</LinearLayout>
</ScrollView>